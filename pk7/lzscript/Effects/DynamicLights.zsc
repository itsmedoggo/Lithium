class Lith_StarDestroyerRainbowProjectile1 : Lith_LightProjectileRedShort
{
   states
   {
   Spawn:
     TNT1 A 1 NoDelay {
        target = target.master;
     }
     goto Spawn1;
   Derp:
     TNT1 A 1;
   Spawn1:
     TNT1 A 1 {
        if (target != null)
        {
           SetXYZ(target.pos);
           return ResolveState("Derp");
        }
        return ResolveState("Death");
     }
     loop;
   Death:
     TNT1 A 1;
     stop;
    }
}

