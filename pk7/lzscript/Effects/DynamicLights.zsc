class Lith_LightProjectileRedShort : Actor
{
   default
   {
      Damage 0;
	  Radius 0;
	  Speed  0;
	  Height 0;
      Projectile;

      +DONTSPLASH
      +DROPOFF
      +NOBLOCKMAP
	  +NOGRAVITY
      +NOINTERACTION
	  +NONSHOOTABLE
      +NOTELEPORT
      +NOTIMEFREEZE
      +NOTRIGGER
	  +THRUACTORS
   }

   int counter;
   
   states
   {
   Spawn:
	  TNT1 A 1 {
        A_Warp(AAPTR_TARGET, 0, 0, 40, 0, WARPF_NOCHECKPOSITION|WARPF_INTERPOLATE);
        counter++;
     }
     TNT1 A 0 A_JumpIf(counter >= 2, "Death");
     loop;
   Death:
      TNT1 A 0;
      stop;
   }
}

